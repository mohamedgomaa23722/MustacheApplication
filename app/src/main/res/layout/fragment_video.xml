<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragment.VideoFragment">

    <VideoView
        android:id="@+id/videoPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:background="#740E0E0E"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/bottom_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#740E0E0E"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="7">


            <ImageView
                android:id="@+id/exo_rew"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_replay_10_24"
                app:tint="@color/white" />



            <ImageView
                android:id="@+id/exo_play"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_outline_pause_circle_outline_24"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/exo_forward"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_forward_10_24"
                app:tint="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>